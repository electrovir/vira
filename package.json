{
    "name": "@electrovir/vira-root",
    "version": "0.0.0",
    "private": true,
    "license": "(MIT or CC0 1.0)",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "mono-vir for-each npm run compile",
        "docs:update": "virmator code-in-markdown",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "start": "npm install && cd packages/vira && virmator frontend",
        "test": "mono-vir for-each-async npm test",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto \"npm run test:types\" \"npm run test:coverage\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:coverage": "mono-vir for-each-async npm run test:coverage",
        "test:docs": "virmator code-in-markdown check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "mono-vir for-each tsc --noEmit"
    },
    "devDependencies": {
        "element-book": "^5.0.1",
        "esbuild": "^0.17.19",
        "markdown-code-example-inserter": "^0.3.0",
        "mono-vir": "^0.1.2",
        "npm-check-updates": "^16.10.12",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.3",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.3",
        "prettier-plugin-organize-imports": "^3.2.2",
        "prettier-plugin-packagejson": "^2.4.3",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "virmator": "^6.6.0"
    }
}
