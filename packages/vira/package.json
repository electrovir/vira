{
    "name": "vira",
    "version": "2.5.1",
    "description": "A simple and highly versatile design system using element-vir.",
    "keywords": [
        "design",
        "system",
        "vir",
        "elements",
        "custom",
        "components",
        "web",
        "element-vir"
    ],
    "homepage": "https://github.com/electrovir/vira",
    "bugs": {
        "url": "https://github.com/electrovir/vira/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/vira"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "build": "npm run compile && virmator frontend build",
        "compile": "virmator compile && rm -rf ../../node_modules/element-book/node_modules/vira",
        "prepublishOnly": "cd ../scripts && npm run publish:pre",
        "preview": "npm run compile && virmator frontend preview --outDir ./dist-book",
        "postpublish": "cd ../scripts && npm run publish:post",
        "start": "npm run compile && virmator frontend",
        "test": "virmator test-web",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names tests,docs \"npm run test\" \"npm run test:docs\"",
        "test:coverage": "npm run test",
        "test:docs": "virmator docs check"
    },
    "dependencies": {
        "@augment-vir/browser": "^21.6.0",
        "@augment-vir/common": "^21.6.0",
        "colorjs.io": "^0.4.5",
        "date-vir": "^4.1.0",
        "element-vir": "^16.5.2",
        "lit-css-vars": "^3.0.2",
        "spa-router-vir": "^3.0.2",
        "type-fest": "^4.7.1"
    },
    "devDependencies": {
        "@augment-vir/browser-testing": "^21.6.0",
        "@augment-vir/node-js": "^21.6.0",
        "@open-wc/testing": "^4.0.0",
        "@types/chai": "^4.3.10",
        "@types/mocha": "^10.0.4",
        "@web/dev-server-esbuild": "^1.0.1",
        "@web/test-runner": "^0.18.0",
        "@web/test-runner-commands": "^0.9.0",
        "@web/test-runner-playwright": "^0.11.0",
        "@web/test-runner-visual-regression": "^0.9.0",
        "dependency-cruiser": "^15.3.0",
        "element-book": "^10.1.5",
        "esbuild": "^0.19.5",
        "istanbul-smart-text-reporter": "^1.1.2",
        "markdown-code-example-inserter": "^0.3.2",
        "npm-check-updates": "~16.12.3",
        "run-time-assertions": "^0.1.3",
        "typedoc": "^0.25.3",
        "typescript": "^5.2.2",
        "vite": "^4.5.0",
        "vite-tsconfig-paths": "^4.2.1"
    }
}
