{
    "name": "vira",
    "version": "2.3.0",
    "description": "A simple and highly versatile design system using element-vir.",
    "keywords": [
        "design",
        "system",
        "vir",
        "elements",
        "custom",
        "components",
        "web",
        "element-vir"
    ],
    "homepage": "https://github.com/electrovir/vira",
    "bugs": {
        "url": "https://github.com/electrovir/vira/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/vira"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "build": "npm run compile && virmator frontend build",
        "compile": "virmator compile && rm -rf ../../node_modules/element-book/node_modules/vira",
        "prepublishOnly": "cd ../scripts && npm run publish:pre",
        "preview": "npm run compile && virmator frontend preview --outDir ./book-dist",
        "postpublish": "cd ../scripts && npm run publish:post",
        "start": "npm run compile && virmator frontend",
        "test": "virmator test-web",
        "test:all": "npm test",
        "test:coverage": "npm run test",
        "test:docs": "virmator code-in-markdown check"
    },
    "dependencies": {
        "@augment-vir/common": "^18.1.0",
        "colorjs.io": "^0.4.5",
        "element-vir": "^16.3.2",
        "lit-css-vars": "^3.0.1",
        "spa-router-vir": "^3.0.2",
        "type-fest": "^4.3.1"
    },
    "devDependencies": {
        "@augment-vir/browser-testing": "^18.1.0",
        "@augment-vir/node-js": "^18.1.0",
        "@open-wc/testing": "^3.2.0",
        "@types/chai": "^4.3.6",
        "@types/mocha": "^10.0.1",
        "@web/dev-server-esbuild": "^0.4.1",
        "@web/test-runner": "^0.17.1",
        "@web/test-runner-commands": "^0.8.0",
        "@web/test-runner-playwright": "^0.10.1",
        "@web/test-runner-visual-regression": "^0.8.2",
        "esbuild": "^0.19.2",
        "istanbul-smart-text-reporter": "^1.1.2",
        "typescript": "^5.2.2",
        "vite": "^4.4.9",
        "vite-tsconfig-paths": "^4.2.1"
    }
}
