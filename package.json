{
    "name": "@electrovir/vira-root",
    "version": "2.3.1",
    "private": true,
    "license": "(MIT or CC0 1.0)",
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspace vira",
        "compile": "mono-vir for-each npm run compile",
        "format": "virmator format",
        "preview": "npm run preview --workspace vira",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "regenerate-deps": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -f package-lock.json && npm i",
        "scripts": "npm run execute --workspace @electrovir/vira-scripts",
        "start": "npm i && npm run scripts && npm run start --workspace vira",
        "test": "mono-vir for-each-async npm run test:all",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names types,tests,spelling,format \"npm run test:types\" \"npm run test\" \"npm run test:spelling\" \"npm run test:format\"",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "mono-vir for-each tsc --noEmit"
    },
    "dependencies": {
        "colorjs.io": "^0.4.5"
    },
    "devDependencies": {
        "cspell": "^7.3.7",
        "element-book": "^10.1.2",
        "esbuild": "^0.19.4",
        "markdown-code-example-inserter": "^0.3.2",
        "mono-vir": "^0.1.5",
        "npm-check-updates": "~16.12.3",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.6",
        "prettier-plugin-sort-json": "^2.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "virmator": "^8.0.5"
    },
    "overrides": {
        "make-dir": "npm:make-dir@v4.0.0"
    }
}
